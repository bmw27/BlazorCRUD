@page "/weather-forecast/create"

@using BlazorCRUD.Data.Models
@using BlazorCRUD.Services
@inject WeatherForecastService ForecastService
@inject NavigationManager NavigationManager

<PageTitle>Add Weather forecast</PageTitle>

<h1>Add Weather Forecast</h1>

@code {
    private WeatherForecast _forecast = new WeatherForecast();

    private async Task CreateWeatherForecast()
    {
        await ForecastService.CreateWeatherForecastAsync(_forecast);
        NavigationManager.NavigateTo("/weather-forecast");
    }
}
